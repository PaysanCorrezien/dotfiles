[user]
  name = "{{ .git.name | default "Your Name" }}"
  email = "{{ .git.email | default "your.email@example.com" }}"
  signingkey = "{{ .git.gpg | default "YOUR_GPG_KEY_ID" }}"

[core]
    editor = nvim
    autocrlf = input # Use 'input' for Unix/Mac, 'true' for Windows
    whitespace = fix
    excludesfile = ~/.config/git/gitignore_global

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --oneline --graph --all
    prettylog = log --pretty=format:'%C(yellow)%h %Creset- %C(green)(%cr) %C(bold blue)<%an>%Creset %s' --abbrev-commit --date=relative

[push]
    default = current

[branch]
    autosetuprebase = always

[pull]
    rebase = true

[merge]
    tool = neovim
    cmd = nvim -d $LOCAL $REMOTE -c '$wincmd w' -c 'wincmd J'

[diff]
    tool = neovim
    cmd = nvim -d $LOCAL $REMOTE

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[commit]
    template = ~/.config/git/commit_template.txt
    gpgsign = true

[fetch]
    prune = true

[gpg "program"]
    gpg = gpg
    gpgAgent = true
